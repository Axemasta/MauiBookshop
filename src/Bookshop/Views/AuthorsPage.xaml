<?xml version="1.0" encoding="utf-8" ?>
<base:BaseContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 xmlns:base="clr-namespace:Bookshop.Views.Base"
			 xmlns:vm="clr-namespace:Bookshop.ViewModels"
			 xmlns:entities="clr-namespace:Bookshop.DAL.Entities;assembly=Bookshop.DAL"
			 x:Class="Bookshop.Views.AuthorsPage"
			 x:DataType="vm:AuthorsViewModel"
			 x:TypeArguments="vm:AuthorsViewModel"
			 Title="{Binding Title}">
	<CollectionView ItemsSource="{Binding Authors}">
		<CollectionView.ItemTemplate>
			<DataTemplate x:DataType="entities:Author">
				<Frame Margin="4" Padding="12">
					<Frame.GestureRecognizers>
						<TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:AuthorsViewModel}}, Path=GoToDetailsCommand}" CommandParameter="{Binding .}" />
					</Frame.GestureRecognizers>
					<Label Text="{Binding FirstName}" FontSize="Large" TextColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource Black}}" />
				</Frame>
			</DataTemplate>
		</CollectionView.ItemTemplate>
	</CollectionView>
</base:BaseContentPage>
