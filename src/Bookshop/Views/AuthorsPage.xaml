<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 xmlns:vm="clr-namespace:Bookshop.ViewModels"
			 xmlns:m="clr-namespace:Bookshop.Models"
			 x:Class="Bookshop.Views.AuthorsPage"
			 x:DataType="vm:AuthorsViewModel"
			 Title="{Binding Title}">
	<CollectionView ItemsSource="{Binding Items}">
		<CollectionView.ItemTemplate>
			<DataTemplate x:DataType="m:SampleItem">
				<Frame Margin="4" Padding="12">
					<Frame.GestureRecognizers>
						<TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:AuthorsViewModel}}, Path=GoToDetailsCommand}" CommandParameter="{Binding .}" />
					</Frame.GestureRecognizers>
					<Label Text="{Binding Title}" FontSize="Large" TextColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource Black}}" />
				</Frame>
			</DataTemplate>
		</CollectionView.ItemTemplate>
	</CollectionView>
</ContentPage>
